<UserControl
    x:Class="VLC_WINRT.Views.Controls.MainPage.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="550">
    <StackPanel Width="500" Margin="0,50,0,0">
        <Image Height="340" Width="300" Source="../../../Assets/ShinyPylon/300_340.png"></Image>
        <TextBlock TextWrapping="Wrap"                   
                   Style="{StaticResource GroupHeaderTextStyle}"
                   Margin="10,20,10,10"
                   HorizontalAlignment="Center"
                   x:Uid="Welcome"
                   Text="Welcome to the VLC for WinRT Beta!" >
        </TextBlock>
        <TextBlock Style="{StaticResource BasicTextStyle}"
                   TextAlignment="Center"
                   Margin="10"
                   x:Uid="IntroPara.Text"
                   Text="This app is our attempt to bring the VLC media player to Microsoft's newest OS. The app is currently under development so not all features have been included, and many existing features have bugs.">
        </TextBlock>
        <Button  Style="{StaticResource TextButtonStyle}" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Click="GoToSpecialThanksPage">
            <Button.Content>
                <TextBlock >
                    <Run Text="THE VLC TEAM WOULD LIKE TO THANK" />
                    <Run Text="" FontFamily="Segoe UI Symbol" />
                </TextBlock>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>